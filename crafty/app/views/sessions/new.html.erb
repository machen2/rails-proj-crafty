<h1>Login</h1>
<hr>

<% if flash[:error] %>
    <p style="color:red"><%= flash[:error] %></p>
<% end %>

<%= form_tag('/login') do %>
  <div class="form-fields">
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </div>

  <div class="form-fields">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>

  <%= submit_tag "Submit" %>
<% end %>
