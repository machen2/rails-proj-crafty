<%= form_for [user, craft] do |f| %>

  <div class="form-fields">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div><br>

  <div class="form-fields">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div><br>

  <div class="form-fields">
    <%= f.label :difficulty %>
    <em>(Difficulty must be 'easy', 'medium', or 'hard'.)</em>
    <%= f.text_field :difficulty %>
  </div><br>

  <div class="form-fields">
    <%= f.label :instructions %><br>
    <%= f.text_area :instructions %>
  </div><br>

  <div class="form-fields">  <!-- ############################# -->
    Tags <br>
    <%= f.fields_for(:tags) do |tag| %>
      <%= tag.label 'Create a New Tag: ' %>
      <%= tag.text_field :name %>
    <% end %>
    <%= f.collection_check_boxes :tag_ids, Tag.all, :id, :name %><br>
  </div>

  <%= f.submit "Submit" %>
<% end %>
