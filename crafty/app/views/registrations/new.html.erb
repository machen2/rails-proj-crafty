<h1>Signup</h1>
<hr>

<%= form_for(@user, url: signup_path(@user)) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h3><%= pluralize(@user.errors.count, "error") %> prohibited this user from being created:</h3>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-fields">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="form-fields">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>

  <div class="form-fields">
    <%= f.label :password %>
    <%= f.password_field :password%>
  </div>

  <%= f.submit "Submit" %>
<% end %>
