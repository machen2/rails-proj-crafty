<h1>Signup</h1>
<hr>

<%= form_for(@user, url: signup_path(@user)) do |f| %>
  <%= render '/registrations/registrations_errors', user: @user %>

  <div class="form-fields">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="form-fields">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>

  <div class="form-fields">
    <%= f.label :password %>
    <%= f.password_field :password%>
  </div>

  <%= f.submit "Submit" %>
<% end %>
